<!DOCTYPE html>
<html lang="en">
  <head>
      <meta charset="UTF-8">
      <meta name="viewport"> 
      <link rel="stylesheet" href="styles.css">
      <title>{{title}}</title>
  </head>
  
  <body>
    <a href="/site/home.html">Home</a>
    <h2>All Groups</h2>

    {{#if groups}}
      {{#each groups}}
        <head>Group:{{_source.name}}</head>
        <p>Description:{{_source.description}}</p>
        <p>Id:{{_id}}</p>
        <p>UserId:{{_source.userId}}</p>
        <p>Events:{{_source.events}}</p>
      {{/each}}
    {{/if}}

    {{#if message}}
      <h3>{{message}}</h3>
    {{/if}}  
  </body>

  {{!-- <form action="/group" method="post">
