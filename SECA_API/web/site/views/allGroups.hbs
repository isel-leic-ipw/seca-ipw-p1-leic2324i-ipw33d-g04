<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <title>{{title}}</title>
  </head>
  
  <body>
    <a href="/site/home.html">Home</a>
    <h2>All Groups</h2>

    {{#if groups}}
      {{#each groups}}
        <head>Name:{{_source.name}}</head>
        <p>Description:{{_source.description}}</p>
        <p>Id:{{_id}}</p>
        <p>UserId:{{_source.userId}}</p>
        <p>Events: 
          {{#if _source.events}}
            {{#each _source.events}}
              <head>Name: {{name}}</head>
              <p>Image: {{Image}}</p>
              <p> Sales start: {{salesStart}}</p>
              <p>Sales end: {{salesEnd}}</p>
              <p>Event dates: {{date}}</p>
              <p>Segment: {{segment}}</p>
              <p>Genre: {{genre}}</p>
              <p>subGenre: {{subGenre}}</p>
            {{/each}}
          {{/if}}
        </p>
      {{/each}}
    {{/if}}

    {{#if message}}
      <h3>{{message}}</h3>
    {{/if}}  
  </body>

  {{!-- <form action="/group" method="post">
    <input type="submit" value="Go">
  </form> --}}
</html>
